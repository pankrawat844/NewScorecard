<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <customfont.Gotham
                android:id="@+id/venue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="venue"
                android:textColor="@android:color/white"
                android:textSize="14dp" />

            <ImageView
                android:id="@+id/team1_img"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@+id/venue"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp" />

            <customfont.Gotham
                android:id="@+id/team1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/venue"
                android:layout_alignTop="@+id/team1_img"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/team1_img"
                android:text="Team1"
                android:textColor="@android:color/white" />

            <customfont.GothamBold
                android:id="@+id/score1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/team1_img"
                android:layout_marginLeft="10dp"
                android:text="Score"
                android:textColor="@android:color/white"
                android:textSize="18dp" />

            <customfont.GothamBold
                android:id="@+id/wicket1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/score1"
                android:layout_marginLeft="10dp"
                android:text=""
                android:textColor="@android:color/white" />

            <customfont.GothamBold
                android:id="@+id/vs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="VS"
                android:textColor="@android:color/white"
                android:textSize="17dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/team2_img"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@+id/venue"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp" />

            <customfont.Gotham
                android:id="@+id/team2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/team2_img"
                android:layout_marginTop="15dp"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/team2_img"
                android:text="Team 2"
                android:textColor="@android:color/white" />

            <customfont.GothamBold
                android:id="@+id/score2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/team2_img"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:text=""
                android:textColor="@android:color/white"
                android:textSize="18dp" />

            <customfont.GothamBold
                android:id="@+id/wicket2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/score2"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:text=""
                android:textColor="@android:color/white" />

            <customfont.Gotham
                android:id="@+id/result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/score1"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:text=""
                android:textColor="@android:color/white"
                android:textSize="14dp"

                />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>