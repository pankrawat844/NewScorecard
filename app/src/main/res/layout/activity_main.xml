<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relViewMiniScore"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/ds_lay_Title"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ds_tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start|left"
            android:padding="5dp"
            android:src="@drawable/live_score" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/ds_lay_Title"
        android:orientation="horizontal"
        android:weightSum="2"
        android:background="@color/colorPrimary">

        <customfont.GothamBold
            android:id="@+id/liveScore"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Live Score"
            style="@style/Base.TextAppearance.AppCompat.Medium"
            android:gravity="center"
            android:textColor="#fff"/>

        <customfont.GothamBold
            android:id="@+id/allMatches"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="All Matches"
            style="@style/Base.TextAppearance.AppCompat.Medium"
            android:gravity="center"
            android:textColor="#fff"/>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/scoreFrame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tabs"/>

</RelativeLayout>